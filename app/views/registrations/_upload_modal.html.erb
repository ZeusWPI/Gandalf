<div class="modal fade" id="upload-modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Upload transfer CSV</h4>
      </div>
      <%= form_tag({ action: :upload }, multipart: true) do %>
        <div class="modal-body">
        <div class="form-group">
          <label>CSV file:</label>
          <%= file_field_tag :csv_file %>
        </div>
        <div class="form-group">
          <label>Column separator:</label>
          <%= text_field_tag :separator, ';', class: 'form-control' %>
        </div>
        <div class="form-group">
          <label>Amount column header:</label>
          <%= text_field_tag :amount_column, 'Bedrag', class: 'form-control' %>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <%= button_tag "Upload", class: "btn btn-primary" %>
      </div>
    <% end %>
    </div>
  </div>
</div>
