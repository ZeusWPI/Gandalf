<% if @event.registration_xls.attached? %>
  <%= link_to raw('<i class="glyphicon glyphicon-download"></i> Download xls'), rails_blob_path(@event.registration_xls, disposition: "attachment"), class: 'btn btn-default', data: { toggle: 'tooltip' }, title: "Generated on #{nice_time @event.export_updated_at}" %>
  <%= link_to raw('<i class="glyphicon glyphicon-refresh"></i> Update xls'), generate_export_event_path(@event), class: 'btn btn-default', method: :post, remote: true, id: "refresh-export" %>
<% else %>
  <%= link_to raw('<i class="glyphicon glyphicon-refresh"></i> Generate xls'), generate_export_event_path(@event), class: 'btn btn-default', method: :post, remote: true, id: "refresh-export" %>
<% end %>
