<h1><%= @event.name %></h1>
<p><%= @event.description %></p>

<h2>Manage Event Zones</h2>
<div class="row">
  <div class="col-lg-5">
    <div class="table-responsive">
      <table class="table">
        <thead>
          <th>Name</th>
          <th>Actions</th>
        </thead>
        <%= render @event.zones %>
      </table>
    </div>
  </div>
</div>
<%= render "zones/form" %>

<h2>Manage Access Levels</h2>
<div class="row">
  <div class="col-lg-5">
    <div class="table-responsive">
      <table class="table">
        <thead>
          <th>Name</th>
          <th>Zones</th>
          <th>Actions</th>
        </thead>
        <%= render @event.access_levels %>
      </table>
    </div>
  </div>
</div>

<%= render "access_levels/form" %>

<h2>Manage Access Periods</h2>
<div class="row">
  <div class="col-lg-5">
    <div class="table-responsive">
      <table class="table">
        <thead>
          <th>Name</th>
          <th>Starts</th>
          <th>Ends</th>
        </thead>
        <%= render @event.periods %>
      </table>
    </div>
  </div>
</div>

<%= render "periods/form" %>
