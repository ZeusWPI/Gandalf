<%= render partial: "events/tabs" %>

<div class="row">
  <div class="col-sm-6">
    <h3>Manage tickets</h3>
    <div class="table-responsive">
      <table class="table" id="table-access-levels">
        <thead>
          <th>Name</th>
          <th width="150">Sold/Capacity</th>
          <th>Price</th>
          <th>Availability</th>
          <th>Allows comments</th>
          <% if @advanced %>
            <th>Zones</th>
          <% end %>
          <th>Actions</th>
        </thead>
        <%= render @event.access_levels, advanced: @advanced %>
      </table>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-sm-4">
    <h3>Add ticket</h3>
    <%= render "access_levels/form" %>
  </div>
</div>
