<%= form_for [@event, @event.access_levels.build], remote: true do |f| %>
  <div class="form-group">
    <%= f.label :name %>:
    <div class="row">
      <div class="col-lg-5">
        <%= f.text_field :name, class: 'form-control' %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :capacity %>:
    <div class="row">
      <div class="col-lg-5">
        <%= f.number_field :capacity, class: 'form-control', min: 0 %>
      </div>
    </div>
  </div>
  <%= f.button :submit, class: 'btn btn-group btn-primary' %>
<% end %>
